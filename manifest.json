{
  "manifest_version": 2,
  "minimum_chrome_version": "23.0.0",
  "name": "Yappy",
  "short_name": "Yappy",
  "description": "Send & Receive text messages from Chrome using your Android phone",
  "version": "1.36",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
  			"48": "images/icon_48.png"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "storage", 
	"contextMenus", 
	"tabs", 
	"notifications",
	"https://api.yappy.im/*",
	"https://www.yappy.im/*"
  ],
  "web_accessible_resources": [
	"font/roboto/*.ttf"
  ],
  "content_security_policy": "script-src 'self' https://api.yappy.im; object-src 'self'; img-src 'self' https://api.yappy.im;"
}